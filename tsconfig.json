{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src",
    "noImplicitAny": false,
    "sourceMap": true,
    "types": ["node", "jest"],
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": [
    "**/.storybook/*",
    ".storybook",
    "node_modules",
    "**/node_modules/*"
  ]
}
